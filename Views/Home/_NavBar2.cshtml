@using GroceryDeliverySystem.Models;

<!DOCTYPE html>
<head>
    <style>
        .dropdown-content2 {
            display: none;
            position: absolute;
            background-color: #f1f1f1;
            min-width: 160px;
            box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
            z-index: 1;
        }

            .dropdown-content2 a {
                color: black;
                padding: 12px 16px;
                text-decoration: none;
                display: block;
            }

                .dropdown-content2 a:hover {
                    background-color: #ddd;
                }

        .dropdown:hover .dropdown-content2 {
            display: block;
        }

        .dropdown:hover .dropbtn {
            background-color: #3e8e41;
        }
    </style>
</head>
<div class="dropdown">
    <button class="btn btn-outline-dark dropbtn">Hello, @Model.firstName</button>
    <div class="dropdown-content2">
        <a href="#">Account Settings</a>
        <a href="#">Past Orders</a>
        @if(User.IsInRole("A"))
        {
            <a href="/Panel/Index/">Admin Panel</a>
        }
        else if(User.IsInRole("S"))
        {
            <a href="/Panel/Index/">Manager Panel</a>
        }
        <a href="/Home/Logout/">Sign Out</a>
    </div>
</div>