
@{
    ViewBag.Title = "Login";
}

@ViewBag.hata

<nav aria-label="breadcrumb">
    <ol class="breadcrumb bg-light p-3 rounded container mt-4">
        <li class="breadcrumb-item"><a href="../">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">Login</li>
    </ol>
</nav>

<p class="mt-5 fs-3 fw-bold text-center">Log in to your account</p>

<div class="row justify-content-center login-form">
    <div class="col-md-6 col-lg-4">
        <form action="/Home/Login/" method="post">
            <div data-mdb-input-init class="form-outline mb-4">
                <label>Email address</label>
                <input type="email" id="email" name="email" class="form-control" />
            </div>

            <div data-mdb-input-init class="form-outline mb-4">
                <label>Password</label>
                <input type="password" id="password" name="password" class="form-control" />
            </div>

            <!-- 2 column grid layout for inline styling -->
            <div class="row mb-4">
                <div class="col d-flex justify-content-center">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="" id="form2Example31" checked />
                        <label class="form-check-label" for="form2Example31"> Remember me </label>
                    </div>
                </div>

                <div class="col d-flex justify-content-center">
                    <a href="/Home/ForgotPassword/">Forgot password?</a>
                </div>
            </div>

            <div class="d-flex justify-content-center">
                <input class="btn btn-primary btn-block mb-4" data-mdb-button-init data-mdb-ripple-init type="submit" value="Log in" />
            </div>

            <div class="text-center">
                <p>Not a member? <a href="/Home/Signup/">Sign up</a></p>
            </div>
        </form>
    </div>
</div>