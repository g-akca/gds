@using GroceryDeliverySystem.Models
@model List<Stores>

@{
    ViewBag.Title = "Stores";
}

@section head {
    <style>
        .error {
            color: red;
        }
    </style>
}

@section body {
    <!-- The Modal -->
    <div class="modal" id="deleteModal">
        <div class="modal-dialog">
            <div class="modal-content">

                <!-- Modal Header -->
                <div class="modal-header">
                    <h4 class="modal-title">Delete Store</h4>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <!-- Modal body -->
                <div class="modal-body">
                    <p class="message"></p>
                    <p class="error"></p>
                </div>

                <!-- Modal footer -->
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-danger storeDel">Delete</button>
                </div>

            </div>
        </div>
    </div>

    <div class="modal" id="addModal">
        <div class="modal-dialog">
            <div class="modal-content">

                <!-- Modal Header -->
                <div class="modal-header">
                    <h4 class="modal-title">Add Store</h4>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <!-- Modal body -->
                <div class="modal-body">
                    <form action="/Panel/AddStore/" method="post" id="form1">
                        <label>Name</label>
                        <input type="text" class="form-control" name="name" id="name1" placeholder="Enter name" required />

                        <label>City ID</label>
                        <input type="number" class="form-control" name="cityID" id="cityID1" placeholder="Enter city ID" required />

                        <label>Image URL (Optional)</label>
                        <input type="text" class="form-control" name="imageURL" id="imageURL1" placeholder="Enter image URL" />

                        <label>Description (Optional)</label>
                        <input type="text" class="form-control" name="desc" id="desc1" placeholder="Enter description" />
                    </form>
                </div>

                <!-- Modal footer -->
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary storeAdd" form="form1">Add</button>
                </div>

            </div>
        </div>
    </div>

    <div class="modal" id="updateModal">
        <div class="modal-dialog">
            <div class="modal-content">

                <!-- Modal Header -->
                <div class="modal-header">
                    <h4 class="modal-title">Update Store</h4>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <!-- Modal body -->
                <div class="modal-body">
                    <form action="/Panel/AddStore/" method="post" id="form2">
                        <input type="hidden" class="form-control" name="id" id="id" />

                        <label>Name</label>
                        <input type="text" class="form-control" name="name" id="name2" placeholder="Enter name" required />

                        <label>City ID</label>
                        <input type="number" class="form-control" name="cityID" id="cityID2" placeholder="Enter city ID" required />

                        <label>Image URL (Optional)</label>
                        <input type="text" class="form-control" name="imageURL" id="imageURL2" placeholder="Enter image URL" />

                        <label>Description (Optional)</label>
                        <input type="text" class="form-control" name="desc" id="desc2" placeholder="Enter description" />
                    </form>
                    <p class="message"></p>
                </div>

                <!-- Modal footer -->
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary storeUpd" form="form2">Update</button>
                </div>

            </div>
        </div>
    </div>
}

<div class="container mt-4">
    <div class="row">
        <div style="width:20%;">
            <div class="sidemenu__categories">
                <div class="sidemenu__categories__title">
                    <span>Management Panel</span>
                </div>
                <ul>
                    @if (User.IsInRole("A"))
                    {
                        <li><a href="/Panel/Users/">Users</a></li>
                        <li><a href="/Panel/Couriers/">Couriers</a></li>
                        <li><a href="/Panel/Cities/">Cities</a></li>
                    }
                    <li><a href="/Panel/Stores/">Stores</a></li>
                    <li><a href="/Panel/Categories/">Categories</a></li>
                    <li><a href="/Panel/Products/">Products</a></li>
                </ul>
            </div>
        </div>
        <div class="col-lg-9">
            <h2>Store Details</h2>
            <div>
                <a class="btn btn-success rounded-2" data-bs-toggle="modal" data-bs-target="#addModal"> Add New Store </a>
            </div>
            <div>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th> ID </th>
                            <th> Name </th>
                            <th> City ID </th>
                            <th> Image URL </th>
                            <th> Description </th>
                            <th> Delete </th>
                            <th> Update </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Stores st in Model)
                        {
                            <tr>
                                <td> @st.id </td>
                                <td> @st.name </td>
                                <td> @st.cityID </td>
                                <td> @st.imageURL </td>
                                <td> @st.description </td>
                                <td> <a class="btn btn-danger delModal" data-stID="@st.id" data-name="@st.name" data-cityID="@st.cityID" data-image="@st.imageURL" data-desc="@st.description" data-bs-toggle="modal" data-bs-target="#deleteModal"> Delete </a> </td>
                                <td> <a class="btn btn-info updStore" data-stID="@st.id" data-name="@st.name" data-cityID="@st.cityID" data-image="@st.imageURL" data-desc="@st.description" data-bs-toggle="modal" data-bs-target="#updateModal"> Update </a> </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/Shared/js/jquery-3.7.1.min.js"></script>
    <script>
        $(".delModal").click(
            function () {
                var id = $(this).attr("data-stID");
                var name = $(this).attr("data-name");
                $(".modal-body > p.message").html("Should the store<strong> " + name + " </strong>with the ID<strong> " + id + " </strong>get deleted?");
                $(".storeDel").data("stID", id);
            }
        );

        $(".storeDel").click(
            function () {
                var id = $(this).data("stID");
                $.ajax(
                    {
                        type: "POST",
                        url: "/Panel/DeleteStore/" + id,
                        success: function (result) {
                            if (result == "successful") {
                                window.location.replace("/Panel/Stores/");
                            }
                            else {
                                $(".modal-body > p.error").html("An error occurred");
                            }
                        }
                    }
                )
            }
        );

        $(".updStore").click(
            function () {
                var id = $(this).attr("data-stID");
                var name = $(this).attr("data-name");
                var cityID = $(this).attr("data-cityID");
                var image = $(this).attr("data-image");
                var desc = $(this).attr("data-desc");

                $(".modal-body #id").val(id);
                $(".modal-body #name2").val(name);
                $(".modal-body #cityID2").val(cityID);
                $(".modal-body #imageURL2").val(image);
                $(".modal-body #desc2").val(desc);
            }
        );

    </script>
}

